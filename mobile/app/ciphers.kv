#:kivy 2.0

FloatLayout:
  Label:
    text: "[b][color=ff3333]Cipher[/color] !!![/b]"
    markup: True
    font_size: "40sp"
    size: self.texture_size
    size_hint: (.25, .25)
    pos_hint: {'x':.40, 'y':.80}

  Label:
    text: "Encryption key:"
    text_size: self.size
    font_size: "20sp"
    halign: "left"
    valign: "middle"
    size_hint: (.89, .25)
    pos_hint: {'x':.01, 'y':.70}
  TextInput:
    id: txtKey
    hint_text: "Enter the encryption key"
    password: True
    password_mask: "*"
    allow_copy: False
    font_size: "20sp"
    focus: True
    multiline: False
    write_tab: False
    border: (2, 2, 2, 2)
    size_hint: 0.89, 0.065
    pos_hint: {'x':.01, 'y':.72}
    on_text: app.txtKey()

  Label:
    text: "Password:"
    text_size: self.size
    font_size: "20sp"
    halign: "left"
    valign: "middle"
    size_hint: (.89, .25)
    pos_hint: {'x':.01, 'y':.55}
  TextInput:
    id: txtPwd
    hint_text: "Enter the Password"
    password: True
    password_mask: "*"
    allow_copy: False
    font_size: "20sp"
    focus: True
    multiline: False
    write_tab: False
    border: (2, 2, 2, 2)
    size_hint: 0.89, 0.065
    pos_hint: {'x':.01, 'y':.57}
    on_text: app.txtPwd()

  Label:
    id: lblPwd
    text: ""
    markup: True
    text_size: self.size
    font_size: "16sp"
    halign: "left"
    valign: "middle"
    size_hint: (.89, .25)
    pos_hint: {'x':.01, 'y':.38}

  Button:
    text: "Clear"
    size_hint: (.15, .07)
    pos_hint: {'x':.01, 'y':.88}
    on_release: app.btnClear()

  Button:
    text: "Process"
    size_hint: (.15, .07)
    pos_hint: {'x':.84, 'y':.88}
    on_release: app.btnProcess()

  Button:
    text: "Clip"
    size_hint: (.10, .07)
    pos_hint: {'x':.01, 'y':.30}
    on_release: app.btnClipboard()

  Button:
    text: "Exit"
    size_hint: (.10, .07)
    pos_hint: {'x':.89, 'y':.30}
    on_release: app.btnExit()
