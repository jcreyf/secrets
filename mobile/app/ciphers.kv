#:kivy 2.0

FloatLayout:
  Label:
    text: "[b][color=ff3333]Cipher[/color] !!![/b]"
    markup: True
    font_size: "40sp"
    size: self.texture_size
    size_hint: (.25, .25)
    pos_hint: {'x':.40, 'y':.80}

  Label:
    text: "Encryption key:"
    font_size: "20sp"
    size_hint: (.25, .25)
    pos_hint: {'x':.10, 'y':.70}
  TextInput:
    id: txtKey
    hint_text: "Enter the encryption key"
    password: True
    password_mask: "*"
    allow_copy: False
    font_size: "20sp"
    focus: True
    multiline: False
    border: (2, 2, 2, 2)
    pos_hint: {'x':.10, 'y':.72}
    size_hint: 0.50, 0.065
    on_text: app.txtKey()

  Label:
    text: "Password:"
    font_size: "20sp"
    size_hint: (.25, .25)
    pos_hint: {'x':.10, 'y':.55}
  TextInput:
    id: txtPwd
    hint_text: "Enter the Password"
    password: True
    password_mask: "*"
    allow_copy: False
    font_size: "20sp"
    focus: True
    multiline: False
    border: (2, 2, 2, 2)
    pos_hint: {'x':.10, 'y':.57}
    size_hint: 0.50, 0.065
    on_text: app.txtPwd()

  Label:
    id: lblPwd
    text: ""
    font_size: "16sp"
    size_hint: (.25, .25)
    pos_hint: {'x':.40, 'y':.40}

  Button:
    text: "Process"
    size_hint: (.2, .1)
    pos_hint: {'x':.70, 'y':.30}
    on_release: app.btnProcess()
